<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Common.Dashboard.GridItemActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_dashboard_header"
        android:padding="20dp">


        <ImageView
            android:id="@+id/imageMenu"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="2dp"
            android:contentDescription="@string/todo"
            android:src="@drawable/icon_menu"
            app:layout_constraintEnd_toStartOf="@+id/textKrishi"
            app:layout_constraintHorizontal_bias="0.255"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_goneMarginStart="2dp"
            app:tint="@color/black"
            tools:ignore="ExtraText,MissingConstraints,UnknownId" />


        <TextView
            android:id="@+id/textKrishi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:text="@string/krishi_sarthi"
            android:textColor="@color/colorWhite"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/icon_account"
            app:layout_constraintHorizontal_bias="0.688"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/icon_account"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/icon_account"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_goneMarginEnd="20dp"
            app:tint="@color/black"
            tools:ignore="MissingConstraints">

        </ImageView>


        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:contentDescription="@string/todo"
            android:src="@drawable/icon_add_location"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/editText"
            app:layout_constraintHorizontal_bias="0.113"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_goneMarginStart="14dp"
            app:tint="#423E3E"
            tools:ignore="ContentDescription,MissingConstraints" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="Add Location"
            android:imeOptions="actionSearch"
            android:importantForAutofill="no"
            android:inputType="text"
            android:textColor="@color/colorAccent"
            android:textSize="15sp"
            android:textStyle="italic"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.327"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.957"
            tools:ignore="HardcodedText,MissingConstraints,RtlSymmetry" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/backgorund_white_round_corners"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintCircleRadius="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageMenu"
            app:layout_constraintVertical_bias="0.09"
            tools:ignore="MissingConstraints,UnknownId">

            <ImageView
                android:layout_width="63dp"
                android:layout_height="40dp"
                android:background="@null"
                android:contentDescription="@string/todo"
                android:padding="6dp"
                android:src="@drawable/icon_search"
                app:tint="@color/colorPrimary" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:hint="Search For...."
                android:imeOptions="actionSearch"
                android:importantForAutofill="no"
                android:inputType="text"
                android:paddingStart="15dp"
                android:paddingLeft="15dp"
                android:paddingEnd="15dp"
                android:textColor="@color/colorAccent"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText,RtlSymmetry" />

            <ImageView
                android:layout_width="63dp"
                android:layout_height="40dp"
                android:background="@null"
                android:contentDescription="@string/todo"
                android:padding="6dp"
                android:src="@drawable/icon_mic"
                app:tint="@color/colorPrimary" />

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.smarteist.autoimageslider.SliderView
        android:id="@+id/imageSlider"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:sliderAnimationDuration="3000"
        app:sliderAutoCycleDirection="back_and_forth"
        app:sliderAutoCycleEnabled="true"
        app:sliderIndicatorAnimationDuration="3000"
        app:sliderIndicatorGravity="center_horizontal|bottom"
        app:sliderIndicatorMargin="15dp"
        app:sliderIndicatorOrientation="horizontal"
        app:sliderIndicatorPadding="3dp"
        app:sliderIndicatorRadius="2dp"
        app:sliderIndicatorSelectedColor="#5A5A5A"
        app:sliderIndicatorUnselectedColor="#FFF"
        app:sliderScrollTimeInSec="1"
        app:sliderStartAutoCycle="true"
        android:layout_below="@id/layoutHeader"
        android:background="@drawable/background_dashboard"
        />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/imageSlider"
        android:background="@drawable/background_dashboard"
        android:paddingTop="10dp">


        <TextView
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:text="@string/categories"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <GridView
            android:id="@+id/gridView1"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:numColumns="3"
            android:elevation="8dp"
            android:paddingTop="15dp"
            android:paddingBottom="10dp"
            tools:ignore="UnusedAttribute">
        </GridView>



    </LinearLayout>


</RelativeLayout>