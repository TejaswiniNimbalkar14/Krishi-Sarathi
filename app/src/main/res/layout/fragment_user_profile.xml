<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="userProfile"
    tools:context=".User.UserProfileFragment">

    <Button
        android:id="@+id/profileEditBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:drawableRight="@drawable/edit_icon"
        android:drawableTint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/profileImageCard"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:cardCornerRadius="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileEditBtn">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/default_profile_picture" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/profileFullName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileImageCard" />

    <TextView
        android:id="@+id/profileContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profileFullName"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileFullName" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materialCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profileContact">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center">

            <Button
                android:id="@+id/locationBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#00000000"
                android:drawableTop="@drawable/edit_location_icon"
                android:drawableTint="@color/black"
                android:text="@string/location"
                android:textAllCaps="false"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/paymentBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#00000000"
                android:drawableTop="@drawable/payments_icon"
                android:drawableTint="@color/black"
                android:text="@string/payment"
                android:textAllCaps="false"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/notificationBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#00000000"
                android:drawableTop="@drawable/notification_icon"
                android:drawableTint="@color/black"
                android:text="@string/notification"
                android:textAllCaps="false"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/settingsBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#00000000"
                android:drawableTop="@drawable/settings_icon"
                android:drawableTint="@color/black"
                android:text="@string/settings"
                android:textAllCaps="false"
                android:textColor="@color/black" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/materialCardView">

        <Button
            android:id="@+id/myOrdersBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:background="#00000000"
            android:drawableStart="@drawable/my_orders_icon"
            android:drawableLeft="@drawable/my_orders_icon"
            android:drawablePadding="10dp"
            android:drawableTint="@color/black"
            android:text="@string/my_orders"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="@color/black" />

        <View style="@style/Divider" />

        <Button
            android:id="@+id/trackOrderBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:background="#00000000"
            android:drawableStart="@drawable/location_icon"
            android:drawableLeft="@drawable/location_icon"
            android:drawablePadding="10dp"
            android:drawableTint="@color/black"
            android:text="@string/track_order"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="@color/black" />

        <View style="@style/Divider" />

        <Button
            android:id="@+id/historyBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:background="#00000000"
            android:drawableStart="@drawable/history_icon"
            android:drawableLeft="@drawable/history_icon"
            android:drawablePadding="10dp"
            android:drawableTint="@color/black"
            android:text="@string/history"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="@color/black" />

        <View style="@style/Divider" />

        <Button
            android:id="@+id/getHelpBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:background="#00000000"
            android:drawableStart="@drawable/help_icon"
            android:drawableLeft="@drawable/help_icon"
            android:drawablePadding="10dp"
            android:drawableTint="@color/black"
            android:text="@string/get_online_ordering_help"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="@color/black" />

        <View style="@style/Divider" />

        <Button
            android:id="@+id/aboutBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:background="#00000000"
            android:drawableStart="@drawable/about_icon"
            android:drawableLeft="@drawable/about_icon"
            android:drawablePadding="10dp"
            android:drawableTint="@color/black"
            android:text="@string/about_btn"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="@color/black" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>